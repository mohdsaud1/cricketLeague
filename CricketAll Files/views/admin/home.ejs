<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Premier League</title>
 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <!-- <link rel="stylesheet" href="/CSS/home.css"> -->
    <style>
      
        body {
            margin: 0;
            padding: 0;
            background: url('https://media.istockphoto.com/id/1158435344/photo/illuminated-round-cricket-stadium-at-night-with-wooden-wickets-closeup.jpg?s=612x612&w=0&k=20&c=zwqG2jWqQLzaJyWh3dFO6bA2PUP6fyqiU-06BWSdRZ0=') no-repeat center center fixed;
            background-size: cover;
           
            position: relative;
           
            height: 100vh;
     
        }

        .button{
    display: flex;
    justify-content: space-evenly;
    align-items:center;
    padding-top: 100px;
    padding-bottom: 100px; 
  
}
.btn-custom-black {
            color: white !important;
            background-color: black !important;
            border-color: black !important;
            
        }
#bt,#bt1,#bt2{
    border-radius: 12px ;

}
h2{
  color:white;
  text-align:center;
}
    </style>
    </head>

<body id="by">
    <h2>Welcome to Cricket Championship </h2>
    
    <div class="button">
        <button type="button" class="btn btn-custom-black btn-lg" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo" id="bt">Add Players</button>

        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel">Player Profile</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" action="/admin/add-player">
                    <div class="mb-3">
                      <label for="user-name" class="col-form-label">Name:</label>
                      <input type="text" class="form-control" id="recipient-name" name="name">
                    </div>
                    <div class="mb-3">
                        <label for="user-age" class="col-form-label">Age:</label>
                        <input type="number" class="form-control" id="recipient-name" name="age">
                      </div>
                      <div class="mb-3">
                        <label for="user-age" class="col-form-label">Batsman:</label>
                        <input type="checkbox" id="recipient-name" name="batsman">
                      </div>
                      <div class="mb-3">
                        <label for="user-age" class="col-form-label">Bowler:</label>
                        <input type="checkbox" id="recipient-name" name="bowler">
                      </div>
                      <div class="mb-3">
                        <label for="user-age" class="col-form-label">WicketKeeper:</label>
                        <input type="checkbox" id="recipient-name" name="wicketKeeper">
                      </div>
                      <div class="mb-3">
                        <label for="user-age" class="col-form-label">All Rounder:</label>
                        <input type="checkbox" id="recipient-name" name="allRounder">
                      </div>
                      <label for="user-age" class="col-form-label">phoneNumber</label>
                        <input type="number" class="form-control" id="recipient-name" name="phoneNumber">
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                          </div>
                  </form>
                </div>
                
              </div>
            </div>
          </div>

          <div class="container mt-5">
            <div class="button">
              <button type="button" class="btn btn-custom-black btn-lg" data-bs-toggle="modal"
                data-bs-target="#exampleModal1" id="bt">Add Team</button>
            </div>
    
            <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Team Profile</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <form method="post" action="/admin/add-team">
                      <div class="mb-3">
                        <label for="mngName" class="col-form-label">Mng. Name:</label>
                        <input type="text" class="form-control" id="mngName" name="mngName">
                      </div>
                      <div class="mb-3">
                        <label for="team" class="col-form-label">Team:</label>
                        <input type="text" class="form-control" id="team" name="team">
                      </div>
                      <div class="mb-3">
                        <label for="budget" class="col-form-label">Budget:</label>
                        <input type="number" class="form-control" id="budget" name="budget">
                      </div>
                      <div class="mb-3">
                        <label for="mobileNo" class="col-form-label">Mobile No:</label>
                        <input type="number" class="form-control" id="mobileNo" name="mobileNo">
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>

        <a href="/admin/conductbidding">
        <button type="button" class="btn btn-custom-black btn-lg" id="bt2">Conduct Bidding</button>
        </a>
        <a href="/admin/playerList">
          <button type="button" class="btn btn-custom-black btn-lg" id="bt1">Players List</button>
        </a>
    
        <a href="/admin/teamList">
          <button type="button" class="btn btn-custom-black btn-lg" id="bt1">Team List</button>
        </a>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

</body>


</html>